/* pages/video/video.wxss */
.collection-container{
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.collection-container .collection-title{
    font-size: 30rpx;
    color: #000000;
    width: 100%;
    height: 102rpx;
    line-height: 102rpx;
}
.collection-container .collection-group{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.collection-group .collection-list{
  width: 330rpx;
  height: 285rpx;
  margin-bottom: 30rpx;
}
.collection-list .collection-img{
  width: 330rpx;
  height: 214rpx;
}
.collection-list .collection-title{
  width: 330rpx;
  height: 30rpx;
  display: block;
  margin-top: 4rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
}
.collection-list .collection-time{
  font-size: 20rpx;
  color: #999999;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
}
.collection-group .collection-login{
  width: 100rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #379FF6;
  color: #ffffff;
  font-size: 25rpx;
  line-height: 80rpx;
  text-align: center;
}